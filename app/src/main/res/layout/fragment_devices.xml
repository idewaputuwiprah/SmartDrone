<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".ui.listDevices.DevicesFragment">

    <TextView
        android:id="@+id/tv_list_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_devices_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/myBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sub_list_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_devices_subtitle"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:textColor="@color/myBlack"
        app:layout_constraintTop_toBottomOf="@+id/tv_list_devices"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.8"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_devices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/items_bluetooth_devices"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_list_devices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>